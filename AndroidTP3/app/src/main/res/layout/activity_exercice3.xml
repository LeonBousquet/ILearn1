<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Exercice3Activity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main de l'ordinateur"
        android:gravity="center" />

    <ImageView
        android:id="@+id/choixOrdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Résultat de la partie"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir une main"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/caillou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:src="@drawable/caillou" />

        <ImageView
            android:id="@+id/papier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:src="@drawable/papier" />

        <ImageView
            android:id="@+id/ciseaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="click"
            android:src="@drawable/ciseaux" />

    </LinearLayout>

    <TextView
        android:id="@+id/victoires"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de victoires: "
        android:gravity="left" />

    <TextView
        android:id="@+id/defaites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de défaites: "
        android:gravity="left" />

    <TextView
        android:id="@+id/egalités"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre d'égalités: "
        android:gravity="left" />



</LinearLayout>